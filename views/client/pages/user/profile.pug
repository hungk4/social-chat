extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head("Thông tin tài khoản")

        form(
          action=`/user/profile/edit/${user.id}?_method=PATCH`
          method="POST"
          enctype="multipart/form-data"
        )
          div(class="form-group")
            label(for="fullName") Họ tên
            input(
              type="text"
              class="form-control"
              id="fullName"
              name="fullName"
              required
              value=user.fullName
            )
          div(
            class="form-group"
            upload-image
          )
            label(for="avatar") Avatar
            input(
              type="file"
              class="form-control-file"
              id="avatar"
              name="avatar"
              accept="image/*"
              upload-image-input
            )
            img(
              src=user.avatar
              class="image-preview"
              upload-image-preview
            )            
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary"
            ) Cập nhật
